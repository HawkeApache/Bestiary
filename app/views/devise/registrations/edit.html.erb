<h2>Edytuj profil</h2>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <div class="row">
    <div class="form-group col-md-6">
      <%= f.label "Imię" %><br />
      <%= f.text_field :firstname, autofocus: true, class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-6">
      <%= f.label "Nazwisko" %><br />
      <%= f.text_field :lastname, autofocus: true, class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-6">
      <%= f.label "Login" %><br />
      <%= f.text_field :displayname, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-6">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-6">
      <%= f.label "Hasło" %> <i>(Zostaw pole puste jeśli nie chcesz zmieniać hasła)</i><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-6">
      <%= f.label "Potwierdź hasło" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-6">
      <%= f.label "Aktualne hasło" %> <i>(Wpisz aktualne hasło aby potwierdzić zmiany)</i><br />
      <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "Zapisz", class: "btn btn-primary" %>
  </div>
<% end %>

<br>

<h3>Usuń konto</h3>

<p>Niezadowolony z działania aplikacji? <%= button_to "Usuń konto", registration_path(resource_name), data: { confirm: "Na pewno?" }, method: :delete, class: "btn btn-danger" %></p>

<hr class="my-4">


<%= link_to "Powrót", :back, class: "btn btn-default" %>