<%- if controller_name != 'sessions' %>
  <%= link_to "Logowanie", new_session_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Załóż konto", new_registration_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Zapomiałeś hasła?", new_password_path(resource_name) %><br />
<% end -%>

