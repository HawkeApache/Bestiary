<h1>Użytkownicy</h1>

<table class="table">
  <thead>
    <tr>
      <th>Imię</th>
      <th>Nazwisko</th>
      <th>Login</th>
      <th>Rola</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.firstname %></td>
        <td><%= user.lastname %></td>
        <td><%= user.displayname %></td>
        <td><%= user.role %></td>
        <td><%= link_to 'Pokaż', user %></td>
        <td><%= link_to 'Edytuj', edit_user_path(user) %></td>
        <td><%= link_to 'Usuń', user, method: :delete, data: { confirm: 'Na pewno chcesz usunąć tego użytkownika?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

