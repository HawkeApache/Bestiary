<% if current_user.role == "admin" %>
  <%= link_to 'Dodaj nowy przedmiot', new_subject_path, :class => "btn btn-lg btn-secondary pull-right" %>
<% end %>

<h1>Spis przedmiotów</h1>


<table class="table">
  <thead>
  <tr>
    <th>Nazwa</th>
    <th>Ects</th>
    <th>Ocena</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @subjects.each do |subject| %>
    <tr>
      <td><%= subject.name %></td>
      <td><%= subject.ects %></td>
      <td><%= subject.rating %></td>
      <td><%= link_to 'Pokaż', subject %></td>
      <% if current_user.role == "admin" %>
        <td><%= link_to 'Edytuj', edit_subject_path(subject) %></td>
        <td><%= link_to 'Usuń', subject, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

