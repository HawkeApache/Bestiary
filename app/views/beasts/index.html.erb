<h1>Beasts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Pseudo</th>
      <th>Degree</th>
      <th>Rating</th>
      <th>Bio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beasts.each do |beast| %>
      <tr>
        <td><%= beast.firstname %></td>
        <td><%= beast.lastname %></td>
        <td><%= beast.pseudo %></td>
        <td><%= beast.degree %></td>
        <td><%= beast.rating %></td>
        <td><%= beast.bio %></td>
        <td><%= link_to 'Show', beast %></td>
        <% if current_user.role == "admin" %>
          <td><%= link_to 'Edit', edit_beast_path(beast) %></td>
          <td><%= link_to 'Destroy', beast, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user.role == "admin" %>
  <%= link_to 'New Beast', new_beast_path %>
<% end %>